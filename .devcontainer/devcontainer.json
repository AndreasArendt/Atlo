{
  "name": "Atlo Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",

  "forwardPorts": [3000],

  "postCreateCommand": "npm install @vercel/kv && npm install -g vercel",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder}/.env.local,target=/workspace/.env.local,type=bind"
  ]
}
